@model BloodDonationManagement.Models.Contact

@{
    ViewData["Title"] = "Details";
}

    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="~/assets/img/contact/email.jpg" alt="emaill image"></div>
            <div class="col-md-6">
            <h1 class="display-5 fw-bolder">Message Received</h1>
                <div class="fs-5 mb-5">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-2">
                        <label asp-for="Email" class="control-label">E-mail</label>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Subject)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Subject)
                    </dd>
                    </dl>
                </div>
            <p>@Html.DisplayNameFor(model => model.Message):</p>
            <p class="lead">@Html.DisplayFor(model => model.Message)</p>
                <div class="d-flex">
                <a class="btn btn-outline-dark mx-2" asp-action="Reply" asp-route-id="@Model?.Id">Reply</a>
                <a class="btn btn-outline-danger mx-2" asp-action="Delete" asp-route-id="@Model?.Id">Delete</a>
                <a class="btn btn-outline-primary" asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
<h1 class="display-4">Additional Informations</h1>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="UserType" class="control-label">User Type</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserType)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Email" class="control-label">E-mail</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telephone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telephone)
        </dd>        
    </dl>
</div>
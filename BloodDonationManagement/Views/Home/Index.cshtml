@{
	ViewData["Title"] = "Home Page";
}
<!--Page Content-->
<div class="container">
	<!--Banner-->
	<div class="homeHeaderBackground position-relative overflow-hidden p-3 p-md-5 m-3 text-center">
		<div class="col-md-12 p-lg-5 mx-auto my-5">
			<h1 class="display-3 fw-bold">Blood Connect</h1>
			<h3 class="siteDescription text-light">
				<br />
				Blood Connect is a platform that enables the connection between blood donors and blood banks.<br />
				Donors and blood banks require swift solutions and reliability. <br />
				Count on us.
			</h3><br />
			<div class="d-flex gap-3 justify-content-center lead fw-normal">
				<a class="btn btn-secondary btn-md" asp-area="" asp-controller="About" asp-action="Index" role="button">More about us &raquo;</a>
			</div>
		</div>
	</div>
	<!--Cards-->
	<div class="container py-4">
		<div class="row align-items-md-stretch">
			<div class="col-md-6">
				<div class="h-100 p-5 text-bg-dark rounded-3">
					<h2>Donor</h2>
					<p>If you are a donor candidate seeking to contribute, please register with us.</p>
					<a class="btn btn-outline-light" asp-area="" asp-controller="Donor" asp-action="Create" role="button">Register as blood donor</a>
				</div>
			</div>
			<div class="col-md-6">
				<div class="h-100 p-5 bg-body-tertiary border rounded-3">
					<h2>Blood Bank</h2>
					<p>
						If you represent a blood bank and wish to become our partner, create a login into our website.
					</p>
					<a class="btn btn-outline-secondary" asp-area="" asp-controller="Account" asp-action="Register" role="button">Register as blood bank</a>
				</div>
			</div>
		</div>
		<!--Useful links-->
		<div class="py-5 position-relative overflow-hidden">
			<div class="homeDonationInfo  p-4 text-center">
				<h2 class="section-heading pt-4">Why donate blood?</h2><br />
				<h4 class="fw-normal text-muted mb-3 fs-5">
					Blood donation is a voluntary and altruistic act of extreme importance, as human blood cannot be artificially
					manufactured. Therefore, the only way to save the lives of patients who need blood transfusion is through this
					gesture of love and solidarity. <br /><br />
					Learn everything about the donation process. You'll see that it's simple, quick and safe.
				</h4>
				<div class="py-3">
					<div class="row text-center">
						<div class="col-md-4">
							<div class="card h-100">
								<a href="/LearnMore/Index#eligibility-requirements" class="card-link">
									<img src="~/assets/img/home/filling-form.jpg" class="card-img-top" alt="...">
								</a>
								<h4 class="my-3">Eligibility Requirements</h4>
								<p class="text-muted">In order to safeguard the safety of both patients and donors, click here to explore a list of eligibility requirements.</p>
							</div>
						</div>
						<div class="col-md-4">
							<div class="card h-100">
								<a href="/LearnMore/Index#faq" class="card-link">
									<img src="~/assets/img/home/faq.jpg" class="card-img-top" alt="...">
								</a>
								<h4 class="my-3">F.A.Q.</h4>
								<p class="text-muted">Frequently asked questions about blood donation.</p>
							</div>
						</div>
						<div class="col-md-4">
							<div class="card h-100">
								<a href="/LearnMore/Index#donation-process" class="card-link">
									<img src="~/assets/img/home/process.jpg" class="card-img-top" alt="...">
								</a>
								<h4 class="my-3">Donation Process Overview</h4>
								<p class="text-muted">For a quick overview of the donation process, click here to view more about the steps</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

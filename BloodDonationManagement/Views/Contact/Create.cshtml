@model BloodDonationManagement.Models.Contact

@{
	ViewData["Title"] = "Contact Us";
}

@*Page Content*@
<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-md-10">
			<div class="row justify-content-center">
				<div class="col-md-6">
					<h2 class="heading mb-4">Let's talk about everything!</h2>
					<p>
						Send us your questions and opinions. Or if you'd like to chat about blood donation ;) <br /><br />
						If you represent a blood bank and would like to become our partner, please leave your contact information here,
						and we will get back to you as soon as possible. You can also give us a call!
					</p>

					@*Contact Icons*@
					<div class="wrapper">
						<div class="row mb-5">
							<div class="col-md-3 text-center">
								<div class="icon d-flex align-items-center justify-content-center">
									<span class="fa fa-phone"></span>
								</div>
								<div class="info">
									<p>Phone: <br />(11)2266-0044</p>
								</div>
							</div>
							<div class="col-md-5 text-center">
								<div class="icon d-flex align-items-center justify-content-center">
									<span class="fa fa-paper-plane"></span>
								</div>
								<div class="info">
									<p>Email: <br />bloodconnect@email.com</p>
								</div>
							</div>
							<div class="col-md-4 text-center">
								<div class="icon d-flex align-items-center justify-content-center">
									<span class="fa fa-globe"></span>
								</div>
								<div class="info">
									<p>Website:<br />bloodconnect.com</p>
								</div>
							</div>
						</div>
					</div>
					<p><img src="~/assets/img/contact/bloodbag.jpg" alt="Image" class="img-fluid"></p>
				</div>

				@*Form*@
				<div class="col-md-6">
					<form asp-action="Create" class="mt-5" method="post">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="row mb-2">
							<div class="form-group col-md-12">
								<label asp-for="Name" class="control-label">Full Name</label>
								<input asp-for="Name" class="form-control" placeholder="Your name here" />
								<span asp-validation-for="Name" class="text-danger"></span>
							</div>
						</div>
						<div class="row mb-2">
							<div class="col-md-12 form-group">
								<label asp-for="Email" class="control-label">E-mail</label>
								<input asp-for="Email" class="form-control" />
								<span asp-validation-for="Email" class="text-danger"></span>
							</div>
						</div>
						<div class="row mb-2">
							<div class="col-md-12 form-group">
								<label asp-for="Telephone" class="control-label">Telephone</label>
								<input asp-for=" Telephone" class="form-control" />
								<span asp-validation-for="Telephone" class="text-danger"></span>
							</div>
						</div>
						<div class="row mb-2">
							<div class="col-md-12 form-group">
								<label asp-for="Subject">Subject</label>
								<select asp-for="Subject" class="form-control">
									<option selected>Choose...</option>
									<option>I Have a Question</option>
									<option>I represent a Blood Bank and wish to become a partner</option>
									<option>My elegibility to donate</option>
									<option>Post donation concern</option>
									<option>Volunteer</option>
									<option>Other</option>
								</select>
							</div>
						</div>
						<div class="row mb-2">
							<div class="col-md-12 form-group">
								<label asp-for="UserType" class="control-label">User Type</label>
								<div>
									<label>
										<input type="radio" asp-for="UserType" value="Blood Bank" /> Blood Bank
									</label>
									<label>
										<input type="radio" asp-for="UserType" value="Registered Donor" /> Registered Donor
									</label>
									<label>
										<input type="radio" asp-for="UserType" value="Normal User" /> Normal User
									</label>
								</div>
								<span asp-validation-for="UserType" class="text-danger"></span>
							</div>
						</div>
						<div class="row mb-2">
							<div class="col-md-12 form-group">
								<label asp-for="Message" class="control-label"></label>
								<textarea asp-for="Message" class="form-control" cols="30" rows="7" placeholder="Write your message."></textarea>
								<span asp-validation-for="Message" class="text-danger"></span>
							</div>
						</div>
						<div class="row mb-2">
							<div class="col-12">
								<input type="submit" value="Create" class="btn btn-primary rounded-0 py-2 px-4">
								<span class="submitting"></span>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	}

@model BloodDonationManagement.Models.Contact

@{
	ViewData["Title"] = "Delete Message";
}

@if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
{
	<div class="container mt-4">

		<div class="card text-white bg-secondary my-5 py-4 text-center">
			<div class="card-body">
				<h1 class="display-5 text-white m-0">
					Are you sure you want to delete this message?
				</h1>
			</div>
		</div>
		<dl class="row">
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Name)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Name)
			</dd>
			<dt class="col-sm-2">
				<label asp-for="UserType" class="control-label">User Type</label>
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.UserType)
			</dd>
			<dt class="col-sm-2">
				<label asp-for="Email" class="control-label">E-mail</label>
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Email)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Telephone)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Telephone)
			</dd>
			<hr/>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Subject)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Subject)
			</dd>
			<hr />
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Message)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Message)
			</dd>
		</dl>
	</div>
	<div>
		<form asp-action="Delete">
			<input type="hidden" asp-for="Id" />
			<input type="submit" value="Delete" class="btn btn-danger" /> 
			<a class="btn btn-primary" asp-action="Index">Back to List</a>
		</form>
	</div>
}